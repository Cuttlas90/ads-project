# Backend / Database
POSTGRES_DB=ads
POSTGRES_USER=ads
POSTGRES_PASSWORD=ads
DATABASE_URL=postgresql+psycopg://ads:ads@postgres:5432/ads
REDIS_URL=redis://redis:6379/0
BACKEND_PORT=8000
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://app.chainofwinners.com

# Backend secrets
# SECRET_KEY=

# External services (placeholders)
# TELEGRAM_BOT_TOKEN= from Botfather bot
# TELEGRAM_API_ID= from my.telegram.org
# TELEGRAM_API_HASH= from my.telegram.org
# TELEGRAM_ENABLED=true
# TELEGRAM_SESSION_NAME=tgads_backend
# Optional durable Telethon session source (choose one)
# TELEGRAM_SESSION_STRING=
# TELEGRAM_SESSION_STRING_PATH=
# Optional MTProto proxy for Telethon (use when direct MTProto is blocked)
# TELEGRAM_MTPROXY_HOST=
# TELEGRAM_MTPROXY_PORT=
# TELEGRAM_MTPROXY_SECRET=
# TON_ENABLED=true
# TON_NETWORK=testnet
# TON_CONFIRMATIONS_REQUIRED=3
# TON_FEE_PERCENT=
# TON_REFUND_NETWORK_FEE=0.02
# TON_HOT_WALLET_MNEMONIC=
# TONCENTER_API=https://testnet.toncenter.com/api/v3/jsonRPC
# TONCENTER_KEY=
# TONCONNECT_MANIFEST_URL=
# VERIFICATION_WINDOW_DEFAULT_HOURS=24

# Frontend
VITE_API_BASE_URL=http://localhost:8000
# VITE_API_BASE_URL=https://api.yourdomain.com
# In production keep this false so frontend only uses Telegram.WebApp.initData.
# Set true only for local debugging with ?initData=... URLs.
VITE_ALLOW_QUERY_INITDATA_FALLBACK=false
VITE_BOT_USERNAME=<your_bot_username>
# Telegram username of the human/user account used by backend Telethon verification.
# This user must also be admin in channels for stats-dependent verification.
VITE_TELEGRAM_VERIFY_USER_USERNAME=<your_verify_user_username>
VITE_ALLOWED_HOSTS=localhost,127.0.0.1,app.chainofwinners.com

VITE_TONCONNECT_MANIFEST_URL=https://app.yourdomain.com/tonconnect-manifest.json
TONCONNECT_MANIFEST_URL=https://app.yourdomain.com/tonconnect-manifest.json
